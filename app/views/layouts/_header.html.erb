    <header class="navbar navbar-fixed-top navbar-inverse custom_navbar">
      <div class="container">
        <div class="logo">
          <%= link_to "<span class='top'>Spare</span><br>
          <span class='larger bottom'>Plans</span>".html_safe, root_path %>
        </div>
        <div class="header_search_form">
          <form action="/" method="post">
            <label for="header_search" hidden>Search Form</label>
            <input type="text" id="header_search" placeholder="Search!">
          </form>
        </div>
        <nav class="header_nav nav navbar-nav navbar-right">
          <ul>
            <% if logged_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.name %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Settings", 
                                  edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Log out", 
                                  logout_path, method: "delete" %></li>
                </ul>
              </li>
              <li><%= link_to "Members", users_path %></li>
            <% else %>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
            <li><%= link_to "About Us", about_path %></li>
            <li><%= link_to "Help and FAQ", help_path %></li>
          </ul>
        </nav>
      </div>
    </header>
